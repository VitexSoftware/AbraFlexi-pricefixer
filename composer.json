{
    "name": "vitexsoftware/abraflexi-pricefixer",
    "description": "Product price updater for AbraFlexi",
    "license": "MIT",
    "bin": ["src/fixall.php", "src/pricefix.php", "src/init.php"],
    "type": "project",
    "authors": [
        {
            "name": "CyberVitexus",
            "email": "info@vitexsoftware.cz"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "spojenet/flexibee": "^2025.7"
    },
    "autoload": {
        "psr-4": {
            "AbraFlexi\\PriceFix\\": "src/PriceFix/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "^3.92",
        "ergebnis/composer-normalize": "^2.49",
        "ergebnis/php-cs-fixer-config": "^6.58"
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
